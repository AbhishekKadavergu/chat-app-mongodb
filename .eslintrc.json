{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2020": true,
        "node": true,
        "jquery": true,
        "jest": true,
        "jest/globals": true
    },
    "extends": ["eslint:recommended", "plugin:jest/recommended", "plugin:jest/style", "plugin:jest-formatting/strict"],
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "windows"],
        "quotes": [0, "single"],
        "semi": ["error", "always"]
    }
}
